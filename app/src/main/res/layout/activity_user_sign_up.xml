<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/app_icon_new" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/dicalae_new"
                android:padding="@dimen/_14sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_10sdp">

                        <EditText
                            android:id="@+id/su_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:background="@drawable/back_btn"
                            android:backgroundTint="#3BFFFFFF"
                            android:fontFamily="@font/glacial_regular"
                            android:inputType="textCapSentences"
                            android:textSize="@dimen/_12sdp"
                            android:hint="First Name"
                            android:textColorHint="@color/white"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                        <EditText
                            android:id="@+id/su_lastname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_36sdp"
                            android:backgroundTint="#3BFFFFFF"
                            android:background="@drawable/back_btn"
                            android:fontFamily="@font/glacial_regular"
                            android:inputType="textCapSentences"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:hint="Last Name"
                            android:textColorHint="@color/white"
                            android:paddingHorizontal="@dimen/_8sdp"/>

                </LinearLayout>
            </LinearLayout>



                <EditText
                    android:id="@+id/su_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:inputType="text"
                    android:hint="Email"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:backgroundTint="#3BFFFFFF"
                    android:background="@drawable/back_btn"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/su_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:backgroundTint="#3BFFFFFF"
                    android:background="@drawable/back_btn"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    android:hint="User Name"
                    app:hintTextColor="@color/white"
                    android:padding="@dimen/_8sdp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="@dimen/_15sdp"
                    />


                    <EditText
                        android:id="@+id/su_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_12sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp"
                        android:hint="Password"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColorHint="@android:color/white"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="DOB"
                android:textColorHint="@android:color/white"
                app:boxStrokeColor="#AB4A69"
                app:hintTextAppearance="@style/TextLabel"
                app:hintTextColor="@color/white">

                <EditText
                    android:id="@+id/su_dob"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:backgroundTint="#3BFFFFFF"
                    android:background="@drawable/back_btn"
                    android:drawablePadding="@dimen/_10sdp"
                    android:focusable="false"
                    android:fontFamily="@font/glacial_regular"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:backgroundTint="#3BFFFFFF"
                android:background="@drawable/back_btn"
                android:hint="Country"
                android:orientation="horizontal"
                android:textColorHint="@android:color/white"
                app:boxStrokeColor="#AB4A69"
                app:hintTextAppearance="@style/TextLabel"
                app:hintTextColor="@color/white"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                    android:id="@+id/su_expand_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:src="@drawable/ic_expand_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.hbb20.CountryCodePicker
                    android:id="@+id/su_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/_12sdp"
                    app:ccp_countryPreference="GB"
                    app:ccp_showArrow="false"
                    app:ccp_showFlag="false"
                    app:ccp_defaultNameCode="GB"
                    app:ccp_showFullName="true"
                    app:ccp_showPhoneCode="false"
                    app:ccp_textSize="@dimen/_12sdp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/glacial_regular"
                android:text="Profile picture"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/su_profile_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_upload"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/glacial_regular"
                android:gravity="center"
                android:text="Profile picture upload"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/glacial_regular"
                android:text="Studio picture"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/su_studio_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_upload" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/glacial_regular"
                android:gravity="center"
                android:text="Studio picture upload"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/glacial_regular"
                android:text="Categories"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/su_rvcatagories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/glacial_regular"
                android:text="Style"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/su_rvstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_20sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@color/black">

                <LinearLayout
                    android:id="@+id/su_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_btn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:elevation="@dimen/_2sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                         android:drawablePadding="@dimen/_8sdp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Agree &amp; Sign up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_regular"
                android:gravity="center"
                android:text="By Signing up, you agree to the Terms and Conditions"
                android:textColor="#686868"
                android:textSize="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_30sdp"
                android:gravity="center">

                <TextView
                    android:id="@+id/su_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:text="Terms of Service"
                    android:textColor="@color/blue_light"
                    android:textSize="@dimen/_11sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:text="&amp;"
                    android:textColor="#686868"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp" />

                <TextView
                    android:id="@+id/su_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:text="Privacy Policy"
                    android:textColor="@color/blue_light"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
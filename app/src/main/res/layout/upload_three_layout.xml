<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Price Artwork"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ga_fromActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="Suggested $5,000"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_12sdp" />



            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Mature Content"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="Abstract"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_forward"
                    android:padding="@dimen/_8sdp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sppro_medium"
            android:text="Enable if Artwork is graphic, displaying nude, blood, anything inappropriate for children"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Storage"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="Where is artwork stored"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_forward"
                    android:padding="@dimen/_8sdp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Royalties"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:text="Suggested 10%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />



            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Ownership"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sppro_medium"
            android:padding="@dimen/_5sdp"
            android:text="Creator"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:padding="@dimen/_5sdp"
                android:text="Share %"
                android:textColor="@color/grey"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_menu"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_12sdp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_user"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:padding="@dimen/_5sdp"
                android:text="King Davincii"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:padding="@dimen/_5sdp"
                android:text="Artist"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sppro_medium"
                android:padding="@dimen/_5sdp"
                android:text="100%"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"/>



            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                app:cardBackgroundColor="@color/gray_dark"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardElevation="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/ic_plus"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload a Clear Image of Artwork"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/sppro_medium"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receives revenue from, certified of authenticity, canvas prints, NFTs, royalties and shares."
            android:textColor="@color/gray_text"
            android:fontFamily="@font/sppro_medium"
            android:textSize="@dimen/_12sdp"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_12sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                app:cardBackgroundColor="@color/blue_light"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:cardElevation="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/check"
                    android:backgroundTint="@color/black"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I declare that the above content and artwork\n represented by this digital certificate (COA) does not infringe any copyright and intellectual property right. I understand that no plagiarism is allowed, and that the artwork can be removed if detected."
                android:textColor="@color/gray_text"
                android:fontFamily="@font/sppro_medium"
                android:textSize="@dimen/_12sdp"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                />


        </LinearLayout>

    </LinearLayout>





</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/db_upload"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:src="@drawable/ic_upload_new"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:background="@color/black"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:elevation="2dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/db_home"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:padding="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/home_logo" />

            <ImageView
                android:id="@+id/db_chat"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:elevation="8dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_chat_new" />

            <ImageView
                android:id="@+id/db_discover"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:padding="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_search_new" />

            <ImageView
                android:id="@+id/db_sales_report"
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:padding="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:src="@drawable/ic_sales_report" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/db_userprofile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_wallet_new" />

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>

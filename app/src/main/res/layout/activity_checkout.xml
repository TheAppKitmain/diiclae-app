<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ac_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_back_long_arrow"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_36sdp"
            android:fontFamily="@font/glacial_bold"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Checkout"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/glacial_regular"
                    android:text="Contact Details"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Full Name"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Phone Number"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:text="address"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Address Line 1"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Address Line 2"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="City"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="State/Province/Region"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Zip"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Country"
                    android:textColorHint="@android:color/white"
                    app:boxStrokeColor="#AB4A69"
                    app:hintTextAppearance="@style/TextLabel"
                    app:hintTextColor="@color/white">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#3BFFFFFF"
                        android:background="@drawable/back_btn"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_12sdp"
        android:background="@drawable/back_btn"
        android:fontFamily="@font/glacial_regular"
        android:gravity="center"
        android:paddingVertical="@dimen/_12sdp"
        android:text="Continue"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:background="@drawable/back_btn"
        android:backgroundTint="@color/gray_dark_two"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardBackgroundColor="@color/gray_dark"
            app:cardCornerRadius="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:cardElevation="@dimen/_5sdp">

       <ImageView
           android:layout_width="@dimen/_34sdp"
           android:layout_height="@dimen/_34sdp"
           android:src="@drawable/ic_plus"
           android:backgroundTint="@color/white"
           android:layout_gravity="center"
           />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a Clear Image of Artwork"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/sppro_medium"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This image acts as the cover to your \nCertified of Authority"
        android:textColor="@color/gray_text"
        android:gravity="center"
        android:fontFamily="@font/sppro_medium"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:lineSpacingExtra="@dimen/_2sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artwork Title"
        android:textColor="@color/white"
        android:fontFamily="@font/sppro_medium"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_12sdp">
        
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:backgroundTint="@color/gray_text"
        />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/gray_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/sppro_medium"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artist Statement"
        android:textColor="@color/white"
        android:fontFamily="@font/sppro_medium"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:backgroundTint="@color/gray_text"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            />
    </LinearLayout>



</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.UserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:visibility="gone">

        <TextView
            android:id="@+id/up_tophdg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:fontFamily="@font/glacial_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:visibility="invisible"/>



    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/up_rl_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">

                <ImageView
                    android:id="@+id/up_back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_back_round"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    />

                <ImageView
                    android:id="@+id/up_menu"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_more"
                    android:layout_gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    />

                <ImageView
                    android:id="@+id/up_std_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/up_profile_img"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_above="@+id/up_bottom_layout"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_user"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                />

            <RelativeLayout
                android:id="@+id/up_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/up_rl_img"
                android:layout_marginTop="-75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/profile_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/up_suportes_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/glacial_bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/glacial_regular"
                                android:gravity="center"
                                android:text="Supportes"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp">

                            <TextView
                                android:id="@+id/up_pieces_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/glacial_bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/glacial_regular"
                                android:gravity="center"
                                android:text="Mints"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/up_creatcolect_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/glacial_bold"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11sdp"
                                    android:layout_gravity="center"/>

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/_4sdp"
                                    android:src="@drawable/ic_account_verify" />

                            </LinearLayout>



                            <TextView
                                android:id="@+id/up_at_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/glacial_regular"
                                android:paddingStart="@dimen/_15sdp"
                                android:text=""
                                android:textColor="#8A9BC3"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/up_creatcolect_tt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/glacial_regular"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingTop="@dimen/_3sdp"
                                android:text="Creator/Collector"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />
                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/up_appriLinear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/up_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/glacial_bold"
                                android:paddingStart="@dimen/_15sdp"
                                android:text="+10.30%/Month"
                                android:textColor="#32D74B"
                                android:textSize="@dimen/_11sdp"
                                android:gravity="center"/>


                            <TextView
                                android:id="@+id/up_appriciation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/glacial_regular"
                                android:paddingStart="@dimen/_15sdp"
                                android:text="Appriciation"
                                android:textColor="#8A9BC3"
                                android:textSize="@dimen/_10sdp"
                                android:gravity="center"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/up_supting_txt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/glacial_bold"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_3sdp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/glacial_regular"
                                    android:gravity="center"
                                    android:text="Supporting"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/up_descpton_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/up_davnci_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_regular"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/link_color"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/black"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/gray_dark">

                            <TextView
                                android:id="@+id/up_contact"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_32sdp"
                                android:fontFamily="@font/glacial_regular"
                                android:gravity="center"
                                android:padding="@dimen/_6sdp"
                                android:text="Messages"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/gray_dark">

                            <TextView
                                android:id="@+id/up_edit"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_32sdp"
                                android:fontFamily="@font/glacial_regular"
                                android:gravity="center"
                                android:padding="@dimen/_6sdp"
                                android:text="@string/edit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/up_tablayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/black"
                            app:tabGravity="fill"
                            app:tabTextColor="@color/white"
                            app:tabIndicatorColor="@color/gray_new"
                            app:tabIndicatorHeight="@dimen/_1sdp"
                            app:tabSelectedTextColor="@color/white"
                            app:tabTextAppearance="@style/TextAppearance_Color_TabWidget"
                            />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/up_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_300sdp"
                            android:layout_marginBottom="@dimen/_80sdp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

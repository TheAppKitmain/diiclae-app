<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_light"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_36sdp"
            android:layout_weight="1"
            android:fontFamily="@font/glacial_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/_12sdp"
            android:text="Select Delivery Address"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/pal_close"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_close"
            app:tint="@color/white" />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pal_address_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pal_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="@dimen/_24sdp"
            android:background="@drawable/back_btn"
            android:textStyle="bold"
            android:fontFamily="@font/glacial_regular"
            android:gravity="center"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/pal_add_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:background="@drawable/gray_btn"
        android:backgroundTint="@color/blue_light"
        android:fontFamily="@font/glacial_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Add New Address"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_20sdp"/>



</LinearLayout>
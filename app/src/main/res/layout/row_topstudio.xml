<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_160sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ts_landLay"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardBackgroundColor="@color/color_white_transparent">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ts_landImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"
            />

    </androidx.cardview.widget.CardView>



</LinearLayout>


    <LinearLayout
        android:id="@+id/ts_saqLay"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:visibility="gone"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ts_saqImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ts_portLay"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ts_portImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>
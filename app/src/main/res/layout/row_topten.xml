<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/tt_add_portLay"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tt_add_portImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"
            />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tt_add_saqLay"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tt_add_saqImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tt_add_landLay"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_20sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/tt_add_landImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_white_transparent"
            app:riv_border_width="0.5dp"
            app:riv_corner_radius="@dimen/_20sdp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/dc_fgrv_topten_img"-->
    <!--        android:layout_width="@dimen/_130sdp"-->
    <!--        android:layout_height="@dimen/_150sdp"-->
    <!--        android:src="@drawable/ic_topten" />-->
</LinearLayout>
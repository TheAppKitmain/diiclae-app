<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:backgroundTint="@color/black"
    android:background="@color/black"
    android:orientation="vertical">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_250sdp"-->
<!--                android:layout_marginTop="-4dp"-->
<!--                android:layout_marginEnd="-4dp"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/top_image" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginHorizontal="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/app_icon_new" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/dicalae_new" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/si_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTint="#3BFFFFFF"
                    android:fontFamily="@font/glacial_regular"
                    android:hint="Email"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/si_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/edit_text_bg"
                    android:backgroundTint="#3BFFFFFF"
                    android:fontFamily="@font/glacial_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_12sdp" />

                <!--                <ImageView-->
                <!--                    android:layout_width="@dimen/_20sdp"-->
                <!--                    android:layout_height="@dimen/_20sdp"-->
                <!--                    android:layout_marginStart="8dp"-->
                <!--                    android:layout_marginTop="8dp"-->
                <!--                    android:padding="@dimen/_2sdp"-->
                <!--                    android:src="@drawable/ic_lock"-->
                <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent" />-->


                <TextView
                    android:id="@+id/si_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="end"
                    android:padding="@dimen/_4sdp"
                    android:text="Forgot your Password?"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/_10sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <LinearLayout
                        android:id="@+id/si_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_btn"
                        android:elevation="@dimen/_5sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="Sign in"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/glacial_regular"
                        android:gravity="center"
                        android:text="Create New Account"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/si_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/glacial_regular"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textColor="@color/blue_light"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/add_main"
    android:background="@color/black"
    tools:context=".activities.AddArtPiece">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp">

            <ImageView
                android:id="@+id/add_shpcart"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_13sdp"
                android:src="@drawable/ic_shopping_bag" />

            <TextView
                android:id="@+id/aap_count"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:background="@drawable/circlecolor_davincii"
                android:fontFamily="@font/glacial_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/diiclae" />

        <FrameLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp">

            <ImageView
                android:id="@+id/add_mail"
                android:layout_width="@dimen/_37sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_send_new"
                android:padding="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/add_count"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginTop="-9dp"
                android:layout_marginEnd="-11dp"
                android:background="@drawable/circlecolor_davincii"
                android:fontFamily="@font/glacial_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp"
                android:visibility="gone" />

        </FrameLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorView"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_bold"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/add_descpon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/glacial_regular"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/add_rl_shodw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:clipToPadding="false"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/add_portraitLay"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@drawable/portrait_frame"
                        android:visibility="gone">

<!--                        <androidx.cardview.widget.CardView-->
<!--                            android:layout_width="@dimen/_150sdp"-->
<!--                            android:layout_height="@dimen/_180sdp"-->
<!--                            app:cardCornerRadius="@dimen/_20sdp"-->
<!--                            android:layout_marginStart="@dimen/_12sdp"-->
<!--                            android:layout_marginTop="@dimen/_10sdp"-->
<!--                            >-->

                        <ImageView
                            android:id="@+id/add_main_image"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_180sdp"
                            android:scaleType="fitXY"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            />

<!--                        </androidx.cardview.widget.CardView>-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_saquareLay"
                        android:layout_width="@dimen/_210sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_20sdp">


                        <ImageView
                            android:id="@+id/add_main_image1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_landscapLay"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="@dimen/_170sdp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="@dimen/_20sdp">

                        <ImageView
                            android:id="@+id/add_main_image2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/add_canvas_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/glacial_bold"
                android:paddingHorizontal="@dimen/_12sdp"
                android:text="Available Canvas Size"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/add_Vert_Hor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/glacial_regular"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Vertical and Horizontal pieces"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_13sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/add_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_dark"
                    android:fontFamily="@font/glacial_regular"
                    android:padding="@dimen/_7sdp"
                    android:text="Add Floater Frame"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/add_dwnld_txt"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="$120.99"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/st_theme_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    android:thumb="@drawable/thumb_selector"
                    app:track="@drawable/track_selector"
                    android:checked="true"
                    android:layout_marginEnd="@dimen/_12sdp"/>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:paddingHorizontal="@dimen/_12sdp">

                <TextView
                    android:id="@+id/add_dwnld_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray_dark"
                    android:background="@drawable/edit_text_bg"
                    android:fontFamily="@font/glacial_regular"
                    android:padding="@dimen/_7sdp"
                    android:text=" Digital downloads "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/add_dwnld_dollor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/add_dwnld_txt"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="$10.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <TextView
                    android:id="@+id/add_cacel_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/back_btn"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="CANCEL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />


                <TextView
                    android:id="@+id/add_addToCart_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/back_btn"
                    android:fontFamily="@font/glacial_regular"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
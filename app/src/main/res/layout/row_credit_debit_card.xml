<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/car_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/del_ic"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/relat_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_simcard1"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_sim_cardchip" />

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_simcard1"
                    android:src="@drawable/wifi_icon" />

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_simcard1"
                    android:fontFamily="@font/glacial_regular"
                    android:letterSpacing="0.3"
                    android:text="4000 1234 5678 6010"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/txt_valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:letterSpacing="0.1"
                    android:padding="@dimen/_2sdp"
                    android:text="VALID UPTO"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_1"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toRightOf="@id/txt_valid"
                    android:fontFamily="@font/glacial_regular"
                    android:letterSpacing="0.1"
                    android:text="12/22"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txt_johndeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_valid"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/glacial_regular"
                    android:letterSpacing="0.1"
                    android:text="JOHN DEO"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_valid"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/ic_visa" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/del_ic"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:elevation="@dimen/_100sdp"
            android:src="@drawable/ic_delete_two" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/rc_main_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/blue_light" />

        <TextView
            android:id="@+id/rc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/glacial_regular"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/_10sdp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/blue_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rm_receiverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/rm_receiverMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/receiver_chat_bg"
            android:fontFamily="@font/glacial_regular"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/rc_receiverCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_8sdp">

            <ImageView
                android:id="@+id/rm_receiverImage"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rm_receiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text=""
            android:fontFamily="@font/glacial_regular"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rm_shareReceiverLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/receiver_chat_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/rc_shareReceiverCard"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/rm_shareReceiverImage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rm_shareReceiverArtBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/glacial_bold"
                    />

                <TextView
                    android:id="@+id/rm_shareReceiverMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="ksdjfbjsdbgdjksbg"
                    android:fontFamily="@font/glacial_regular"
                    />

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:id="@+id/rm_shareReceiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/glacial_regular"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rm_senderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_60sdp"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_12sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/rm_senderMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="@dimen/_6sdp"
            android:textSize="@dimen/_12sdp"
            android:background="@drawable/sender_chat_bg"
            android:fontFamily="@font/glacial_regular"
            android:layout_gravity="end"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/rm_senderCard"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_8sdp">

            <ImageView
                android:id="@+id/rm_senderImage"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rm_senderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text=""
            android:fontFamily="@font/glacial_regular"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rm_senderShareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_60sdp"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_12sdp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/sender_chat_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/rm_senderShareCard"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/rm_senderShareImage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rm_senderShareArtBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/glacial_bold"
                    />

                <TextView
                    android:id="@+id/rm_senderShareMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/glacial_regular"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/rm_senderShareTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=""
            android:fontFamily="@font/glacial_regular"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_gravity="end"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:backgroundTint="@color/black_dull"
    android:paddingVertical="@dimen/_10sdp">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@drawable/back_btn"
        android:backgroundTint="@color/gray_text"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            android:id="@+id/ss_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/popins_regular"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Shares"
            android:fontFamily="@font/popins_semibold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12sdp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tough Love"
        android:fontFamily="@font/popins_regular"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_11sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$5"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            />
        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$15"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            />

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$25"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            />
        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$15"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            />

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:text="$25"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:background="@drawable/back_btn"
            android:backgroundTint="@color/gray_dark"
            android:fontFamily="@font/popins_regular"
            android:gravity="center"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:background="@drawable/back_btn"
        android:fontFamily="@font/popins_regular"
        android:gravity="center"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        />

</LinearLayout>